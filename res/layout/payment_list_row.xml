<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dip" >

   <TextView
        android:id="@+id/payment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:text="@string/loading"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:paddingTop="2dp" />

    <ImageView
        android:id="@+id/user_image_borrower"
        android:layout_width="wrap_content"
        android:layout_height="25dip"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/payment_date"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/icon_desc"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/payment_payee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payment_date"
        android:layout_toRightOf="@+id/user_image_borrower"
        android:text="@string/loading"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <TextView
        android:id="@+id/payment_from_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_payee"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="3dp"
        android:text="@string/from"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/user_image_payee"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@+id/payment_payee"
        android:layout_marginRight="3dp"
        android:layout_toRightOf="@+id/payment_from_label"
        android:contentDescription="@string/icon_desc"
        android:src="@drawable/user" />

    <TextView
        android:id="@+id/payment_borrower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_payee"
        android:layout_toRightOf="@+id/user_image_payee"
        android:text="@string/loading"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="sans" />

    <ImageView
        android:id="@+id/payment_amount_image"
        android:layout_width="wrap_content"
        android:layout_height="20dip"
        android:layout_below="@id/payment_date"
        android:layout_marginRight="5dp"
        android:layout_marginTop="2dp"
        android:layout_toLeftOf="@+id/payment_amount"
        android:contentDescription="@string/icon_desc"
        android:src="@drawable/expense" />

    <TextView
        android:id="@+id/payment_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/payment_date"
        android:gravity="right"
        android:text="@string/loading"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans" />

</RelativeLayout>